<h1>New Game</h1>
<div class='letters'>
  <div class='letter'><%= @lettersArray[0] %></div>
  <div class='letter'><%= @lettersArray[1] %></div>
  <div class='letter'><%= @lettersArray[2] %></div>
  <div class='letter'><%= @lettersArray[3] %></div>
  <div class='letter'><%= @lettersArray[4] %></div>
  <div class='letter'><%= @lettersArray[5] %></div>
  <div class='letter'><%= @lettersArray[6] %></div>
  <div class='letter'><%= @lettersArray[7] %></div>
  <div class='letter'><%= @lettersArray[8] %></div>
  <div class='letter'><%= @lettersArray[9] %></div>
</div>
<form action="/score" data-turbo="false">
  <div class="input-group mb-3">
    <input type='hidden' value="<%= @lettersArray.join %>" name="letterGrid">
    <input type="text" name="guess">
    <input type="submit" value="Guess" class="btn btn-primary">
  </div>
</form>
